      <%= link_to("综合排序", products_path, class: "btn btn-default") %>
      <%= link_to("价格低到高", products_path(:order => "by_price_low"), class: "btn btn-default") %>
      <%= link_to("价格高到低", products_path(:order => "by_price_high"), class: "btn btn-default") %>


  <div class="col-md-12" style="background:#8E8E8E" align="center">
    <% @products.each do |product| %>
      <div class="col-md-3">
        <div class="view view-third">
          <%= image_tag(product.photos[0].avatar.thumb.url) %>
            <div class="mask">
              <h2> <%= product.title %> </h2><br>
              <p>  $:<%= product.price %> </p>
           <%= link_to("查看详情",  product_path(product),  :class => "info") %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
