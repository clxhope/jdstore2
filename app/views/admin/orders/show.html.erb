<div class="undlenavbar">
  <div class="row">
    <div claa="col-md-12">
      <h2 class="text-center"> 订单明细 (<%= render_order_paid_state(@order) %>) </h2>

      <%= render "admin/orders/state_option", order: @order %>

      <table class="table table-bordered">
        <thead>
          <tr style="background-color:#1f1f1f; color:white;">
            <th width="80%">商品明细</th>
            <th>单价</th>
            <th>数量</th>
          </tr>
        </thead>
        <tbody>

          <% @product_lists.each do |product_list| %>
          <tr>
            <td>
              <%= product_list.product_name %>
            </td>
            <td>
              <%= product_list.product_price %>
            </td>
            <td>
              <%= product_list.quantity %>
            </td>
          </tr>
          <% end %>

        </tbody>
      </table>

      <div class="total clearfix">
        <span class="pull-right">
         总计 <%= @order.total %> CNY
        </span>
      </div>

      <hr>

      <h2 class="text-center"> 寄送资讯 </h2>

      <table class="table table-striped table-bordered">
        <tbody>
          <tr>
            <td style="background-color:#1f1f1f; color:white;">
              订购人信息
            </td>
          </tr>
          <tr>
            <td>
              订购人姓名：<%= @order.billing_name %> <br>
              订购人通讯地址: <%= @order.billing_address %>
            </td>
          </tr>
          <tr>
            <td style="background-color:#1f1f1f; color:white;">
              收件人信息
            </td>
          </tr>
          <tr>
            <td>
              收件人姓名:<%= @order.shipping_name %> <br>
              收件人地址通讯电话：  <%= @order.shipping_address %>-<%= @order.phone %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
