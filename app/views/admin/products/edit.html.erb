<h2> 编辑商品 </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <% if @product.photos.present? %>
  <span>目前商品图</span> <br>
  <%= image_tag(@product.photos[0].avatar.thumb.url) %>
  <% end %>

  <div class="group">
    <%= f.label :avatar, as: :file %>
    <%= f.file_field :avatar, :multiple => true , name:"photos[avatar][]"  %>
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

 <% end %>
