<!DOCTYPE html>
<html>
<head>
  <title>Metso 后台</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="container">
      <%= render "common/navbar" %>
        <div class="row">
          <div class="col-md-6 col-md-offset-3" >
                <h3 class="text-center">后台服务</h3>
                  <ul class="nav nav-tabs">
                      <li class="active"><a data-toggle="tab" href="#home">资讯</a></li>
                      <li><a data-toggle="tab" href="#menu1">参数</a></li>
                  </ul>

            <div class="tab-content">
               <div id="home" class="tab-pane fade in active">
                <li> <%= link_to("Products", admin_products_path) %> </li>
               </div>
                  <div id="menu1" class="tab-pane fade">
                    <li> <%= link_to("Orders", admin_orders_path) %></li>
                    </div>
             </div>
          </div>
        <div class="col-md-10">
        <%= yield %>
        </div>
        </div>
      </div>
</body>

</html>
