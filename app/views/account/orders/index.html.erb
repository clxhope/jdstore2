<div class="undlenavbar">
  <div class="col-md-12" style="text-align:center">
    <h3> 订单列表 </h3>
  </div>
  <div class="col-md-8 col-md-offset-2">
    <% @orders.each do |order| %>
      <div class="panel panel-default">
        <div class="panel-heading" style="background-color:#1f1f1f; color:white;">
          <tr>
            <td> <%= order.created_at.strftime("%Y-%m-%d") %></td>
            <td>订单号：</td>
          </tr>
        </div>
        <div class="panel-body">
          <table class="table" >
              <tr>
                <th >商品明细</th>
                <th>金额</th>
                <th>数量</th>
                <th>更多详情</th>
              </tr>
              <% current_cart.cart_items.each do |cart_item| %>
              <tr>
                <td>
                  <%= image_tag(cart_item.product.photos[0].avatar.thumb.url,:size => "200x130")  %>
                </td>
                <td>
                  <%= cart_item.product.price %>
                </td>
                <td>
                  <%= cart_item.quantity %>
                </td>
                <td> <%= link_to("订单详情", order_path(order.token)) %> </td>
              </tr>
              <% end %>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>
