<div class="undlenavbar">
  <div class="col-md-12" style="text-align:center">
    <h3> 订单列表 </h3>
  </div>
  <div class="col-md-8 col-md-offset-2">
    <% @orders.each do |order| %>
      <div class="panel panel-default">
        <div class="panel-heading" style="background-color:#1f1f1f; color:white;">
          <tr>
            <td> <%= order.created_at.strftime("%Y-%m-%d") %></td>
            <td>订单号：</td>
          </tr>
        </div>
        <table class="table">
          <tbody>
            <tr>
              <% order.product_lists.each do |product_list| %>
                <td>
                  <%= link_to(product_list.product_name, product_path(product_list)) %>
                </td>
                <td>
                  <td>$<%= product_list.product_price %></td>
                </td>
                <td>
                  <%= product_list.quantity %>
                </td>
              <% end %>
                <td rowspan="2">$<%= order.total %></td>
                <td rowspan="2"> <%= link_to("订单详情", order_path(order.token)) %> </td>
                <td rowspan="2"> <%= link_to("评价", new_order_comment_path(order.token)) %></td>
            </tr>
          </tbody>
        </table>
      </div>
    <% end %>
  </div>
</div>
