<div class="col-md-10 col-md-offset-1">
  <div class="panel panel-default">
    <div class="panel"><h2 style="text-align:center">购物详情</h2></div>


    <!-- Table -->
    <table class="table">
      <thead>
        <tr>
          <th colspan="1">商品资讯</th>
          <th>产品名称</th>
          <th>单价</th>
          <th>数量</th>
          <th>操作选项</th>
        </tr>
      </thead>
      <% current_cart.cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= link_to product_path(cart_item.product) do %>
              <%= image_tag(cart_item.product.image.thumb.url, size:"200x150") %>
          <% end %>
        </td>
        <td style="text-align:left;vertical-align:middle;">
          <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
        </td >
        <td style="text-align:left;vertical-align:middle;">
          <%= cart_item.product.price %>
        </td>
        <td style="text-align:left;vertical-align:middle;">
          <%= form_for cart_item, url: cart_item_path(cart_item.product_id) do |f| %>
          <%= f.select :quantity, 1..cart_item.product.quantity %>
          <%= f.submit "更新", data: { disable_with: "Submiting..."} %>
          <% end %>
        </td>
        <td style="text-align:left;vertical-align:middle;">
          <%= link_to cart_item_path(cart_item.product_id), method: :delete do %>
          <i class="fa fa-trash"></i>
          <% end  %>
        </td>
      </tr>
      <% end %>


    </tbody>
    </table>
  </div>

  <div class="panel panel-footer" style="text-align:right;vertical-align:middle;">

    <span>
      总计 <%= render_cart_total_price(current_cart) %> USD
    </span>
  <%= link_to("确认结账", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger") %>


</div>


</div>
